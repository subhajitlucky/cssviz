      "visualizers": {
        "flexbox": {
          "controls": ["justify-content", "align-items", "flex-direction", "wrap", "gap"],
          "animation": true
        },
        "grid": {
          "controls": ["template-columns", "template-rows", "auto-fit", "auto-fill", "gap"],
          "animation": true
        },
        "boxModel": {
          "layers": ["content", "padding", "border", "margin"],
          "liveAdjustments": true
        },
        "typography": {
          "controls": ["font-size", "line-height", "letter-spacing", "variable-font-axis"],
          "liveRendering": true
        },
        "colors": {
          "tools": ["color wheel", "gradient builder", "hsl sliders"],
          "previewPanels": true
        },
        "animations": {
          "controls": ["duration", "timing", "keyframes editor", "delay", "iterations"],
          "realTimePreview": true
        }
      }
