        { "name": "Multi-Column Layout", "path": "/multicolumn" },
        { "name": "Responsive Design", "path": "/responsive" },
        { "name": "Media Queries", "path": "/media-queries" },
        { "name": "Container Queries", "path": "/container-queries" },
        { "name": "Typography Lab", "path": "/typography" },
        { "name": "Fonts & Variable Fonts", "path": "/fonts" },
        { "name": "Colors & Gradients", "path": "/colors" },
        { "name": "Backgrounds & Parallax", "path": "/backgrounds" },
        { "name": "Borders & Shapes", "path": "/borders" },
