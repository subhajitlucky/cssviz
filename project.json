{
    "projectName": "CSS Universe",
    "description": "A complete, interactive, visually rich website that teaches ALL CSS topics—layouts, typography, animations, colors, rendering, architecture, variables, functions, Houdini APIs, and more—with visualizations, playgrounds, and live examples. Built using React + Vite + TailwindCSS/shadcn. The design must be modern, unique, futuristic, and highly appealing.",
    "techStack": {
      "framework": "React",
      "bundler": "Vite",
      "styling": "TailwindCSS with optional shadcn/ui components",
      "routing": "react-router-dom",
      "theme": {
        "supportsDarkMode": true,
        "persistInLocalStorage": true
      }
    },
    "designLanguage": {
      "aesthetic": "futuristic, neon-minimal, glassmorphism",
      "heroGradient": "linear-gradient(135deg, #6366F1, #06B6D4, #16A34A)",
      "darkHeroGradient": "linear-gradient(135deg, #818CF8, #22D3EE, #4ADE80)",
      "cards": "rounded-2xl shadow-xl bg-opacity-60 backdrop-blur-xl border border-white/10 hover:scale-[1.02] transition-all",
      "animations": {
        "onScrollReveal": true,
        "cardHoverGlow": true,
        "pageTransitions": "fade-up smooth-motion",
        "interactiveControls": "real-time animated feedback"
      },
      "shapes": ["blobs", "floating gradients", "glass panels"]
    },
    "pages": {
      "home": {
        "path": "/",
        "hero": {
          "title": "CSS Universe — Master Every CSS Concept Visually",
          "subtitle": "Explore the entire CSS ecosystem using interactive playgrounds, animations, diagrams, and real-time visualizers.",
          "primaryButton": "Start Learning",
          "secondaryButton": "Explore Visualizers",
          "background": "animated gradient with floating glowing shapes"
        },
        "sections": ["topicCategoriesGrid", "popularVisualizers", "interactiveShowcase"]
      },
      "topics": [
