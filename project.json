        { "name": "3D Transforms & Perspective", "path": "/3d" },
        { "name": "Motion Path (offset-path)", "path": "/motion-path" },
        { "name": "CSS Variables (Custom Properties)", "path": "/variables" },
        { "name": "Functions (calc, min, max, clamp)", "path": "/functions" },
        { "name": "Units (px, em, rem, vw, vh, fr, %)", "path": "/units" },
        { "name": "Accessibility in CSS", "path": "/css-a11y" },
        { "name": "Browser Rendering Pipeline", "path": "/rendering" },
        { "name": "Reflow, Repaint & Compositing", "path": "/reflow" },
